# Scurry Environment Variables
# Copy this file to .env and fill in your values

# === Application Settings ===
# Password for the web UI (default: "cheese")
APP_PASSWORD=cheese

# === qBittorrent Configuration ===
# qBittorrent Web UI URL (required)
APP_QB_URL=http://localhost:8080

# qBittorrent username (default: "admin")
APP_QB_USERNAME=admin

# qBittorrent password (required)
APP_QB_PASSWORD=adminadmin

# Default category for downloaded torrents (default: "books")
APP_QB_CATEGORY=books

# === MyAnonamouse Configuration ===
# User agent for MAM requests (optional)
APP_MAM_USER_AGENT=Scurry/1.0 (+contact)

# Note: MAM token is stored in secrets/mam_api_token file, not as an env var
